[user]
    name = Ignasi Barrera
	email = ignasi@tetrate.io
    signingkey = D959B94F

[core]
    editor = vim
    autocrlf = input
    excludesfile = /Users/nacx/.gitignore

[color]
    status = auto
    interactive = auto
    diff = auto
    branch = auto
    ui = auto

[alias]
    st = status
    ci = commit
    cs = commit -S
    css = commit -S --signoff
    ms = merge -S
    cp = cherry-pick
    cps = cherry-pick -S
    rs = rebase -S
    co = checkout
    pl = pull
    ps = push
    pr = pull --rebase
    br = branch
    lg = log --graph
    lgs = log --graph --show-signature

[gpg]
    program = gpg

[apply]
    whitespace = nowarn

[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
    #pretty=format:%h (%ad %an) %s

[url "git@github.com:"]
    insteadOf = https://github.com/

[protocol]
	version = 2
[commit]
	gpgSign = true
[pull]
	rebase = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
